---
// Header component
---

<header class="bg-white/80 backdrop-blur-md border-b border-gray-100 sticky top-0 z-50">
  <div class="section-container">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <h1 class="text-2xl font-bold text-gray-900">Showreel.design</h1>
      </div>
      
      <!-- Navigation -->
      <nav class="hidden md:flex space-x-10">
        <a href="#" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Home</a>
        <a href="#" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Browse</a>
        <a href="#" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">Categories</a>
        <a href="#" class="text-gray-700 hover:text-gray-900 transition-colors font-medium">About</a>
      </nav>
      
      <!-- CTA Button -->
      <div class="hidden md:flex items-center space-x-4">
        <button class="btn-secondary text-sm">Sign In</button>
        <button class="btn-primary text-sm">Get Started</button>
      </div>
      
      <!-- Mobile menu button -->
      <button class="md:hidden p-2 rounded-xl text-gray-700 hover:bg-gray-100 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>